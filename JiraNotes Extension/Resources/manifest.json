{
  "manifest_version": 3,
  "name": "JiraNotes",
  "version": "1.1.1",
  "description": "Notes panel on Jira tickets. Saves via localhost helper.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://*.atlassian.net/*",
    "*://jira.*/*",
    "*://*.jira.*/*",
    "http://127.0.0.1/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["*://*.atlassian.net/*","*://jira.*/*","*://*.jira.*/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "all_frames": true,
    "run_at": "document_end"
  }],
  "action": { "default_title": "JiraNotes" }
}
